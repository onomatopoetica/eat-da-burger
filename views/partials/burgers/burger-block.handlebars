{{!-- Rendering of burger names + buttons indicating whether the burger has been devoured or waiting to be devoured --}}
<div class="burgerDiv text-center">
    <li>
        <p class="burger">{{burger_name}}</p>

        <button class="eatburger btn btn-warning mb-3" data-id="{{id}}" data-newdevoured="{{devoured}}">
            {{#if devoured}}<img src="/assets/img/mouth.png" width="30" height="auto" /> DEVOURED!{{else}}<img
                src="/assets/img/burger.png" width="30" height="auto" /> DEVOUR IT!{{/if}}
        </button>
    </li>
</div>