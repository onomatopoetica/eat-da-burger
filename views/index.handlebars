{{!-- Page header --}}
<div class="jumbotron jumbotron-fluid bg-warning">
    <div class="container container-fluid text-center">
        <h1 class="Title mb-4">EAT DA BURGER!</h1>
        <img src="/assets/img/burger.png" alt="burger vector image" width="180" height="auto">
        <img src="/assets/img/mouth.png" alt="mouth vector image" width="180" height="auto">
        <h2 class="subTitle mt-4">You KNOW you want to EAT DA BURGER! MMMMMM!</h2>
    </div>
</div>

{{!-- Adding a new burger --}}
<div class="container container-fluid text-center">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burger_name">Burger Name:</label>
            <input type="text" id="newburger" name="burger_name">
        </div>

        <button class="btn btn-warning mb-5" type="submit"><img src="/assets/img/burger.png" width="30" height="auto" />
            Add Da Burger</button>
    </form>
</div>

{{!-- Burgers waiting to be devoured --}}
<div class="container text-center">
    <div class="row">
        <div class="col-6">
            <h2>I'm hungry! Gimme burgers!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        {{!-- Devoured burgers --}}
        <div class="col-6">
            <h2>YUM! Burgers that I devoured!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

{{!-- Footer --}}
<footer class="burgerFooter pb-3 pt-3 text-center" style="font-size: 1rem;">
    <div class="text-black">
        <div class="madeWithLove" style="font-size: .85rem;">Eat Da Burger was created with <i class="fa fa-heart pulse"
                style="color: red;"></i> and <img src="/assets/img/burger.png" width="20" height="auto" /> by <a
                href="https://github.com/onomatopoetica" target="_blank">Onomatopoetica</a> in 2021!
        </div>
    </div>
</footer>